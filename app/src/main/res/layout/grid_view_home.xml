<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="3dp"
        card_view:cardElevation="3dp">

        <RelativeLayout
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_thumbnailHome"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:background="@android:color/white"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/textJudulHome"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/img_thumbnailHome"
                android:background="?attr/colorPrimary"
                android:gravity="center"
                android:text="Judul"
                android:textColor="@android:color/white"
                android:textSize="18dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/statusHome"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textJudulHome"
                android:layout_centerHorizontal="true"
                android:layout_gravity="bottom"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/img_thumbnailHome"
                android:gravity="center"
                android:text="Nama"
                android:textColor="@android:color/black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/keteranganHome"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/statusHome"
                android:layout_centerHorizontal="true"
                android:layout_gravity="bottom"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/img_thumbnailHome"
                android:gravity="center"
                android:text="Keterangan"
                android:textColor="@android:color/black"
                android:textSize="12dp" />

            <!--<Button-->
            <!--android:id="@+id/btn_lihat_detailProgramStudi"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="30dp"-->
            <!--android:layout_below="@id/keteranganProgramStudi"-->
            <!--android:background="@color/colorPrimaryDark"-->
            <!--android:text="Lihat Detail"-->
            <!--android:layout_margin="5dp"-->
            <!--android:textSize="12dp"-->
            <!--android:textColor="@android:color/white" />-->

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>