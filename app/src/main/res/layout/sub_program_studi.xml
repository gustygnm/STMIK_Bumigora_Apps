<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.stmikbumigora.apps.subMenu.subProgramStudi">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_satu_programstudi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/AppTheme.AppBarOverlay" />

    <View
        android:id="@+id/bts"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/toolbar_satu_programstudi"
        android:background="@color/colorPrimaryDark" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tablayout_programstudi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bts"
        android:background="@color/backgroundTab"
        android:clickable="true"
        app:tabIndicatorColor="@color/colorPrimaryDark"
        app:tabSelectedTextColor="@color/colorPrimaryDark"
        app:tabTextColor="@android:color/secondary_text_light">

        <android.support.design.widget.TabItem
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="S1 TI" />

        <android.support.design.widget.TabItem
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="D3 TI" />

        <android.support.design.widget.TabItem
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="D3 MI" />

        <android.support.design.widget.TabItem
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="S1 DKV" />


    </android.support.design.widget.TabLayout>

    <View
        android:id="@+id/bts2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tablayout_programstudi"
        android:alpha=".5"
        android:background="@color/colorPrimaryDark" />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager_programstudi"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/tablayout_programstudi" />

</RelativeLayout>




